# Makefile for producer consumer problem

###############################################################
# Variables
GCC     = clang++
OPTIONS = -o
###############################################################

###############################################################
###############################################################
# Rules
###############################################################
###############################################################

###############################################################
# Compile producer and consumer
producer:
	$(GCC) producer.cpp $(OPTIONS) producer.o
	
consumer:
	$(GCC) consumer.cpp $(OPTIONS) consumer.o

###############################################################

###############################################################
# Compile Bankers Algorithm
algo:
	$(GCC) main.cpp $(OPTIONS) algo.o

###############################################################

###############################################################
# Make the problem run
run:
	./algo.o

###############################################################
# Remove executables
clean:
	rm -f *.o

###############################################################
